<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.detail.view.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ivBackDrop"
        android:transitionName="backdrop"
        app:layout_constraintDimensionRatio="2:1.2"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/topBar"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/outline_west_24"
        android:padding="15dp"
        android:id="@+id/ivBack"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="@id/topBar"
        app:tint="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintStart_toEndOf="@id/ivBack"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvLabel1"
        android:text="Title"
        style="@style/boldText"
        android:layout_margin="20dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/ivBackDrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvLabel1"
        app:layout_constraintStart_toStartOf="@id/tvLabel1"
        app:layout_constraintEnd_toEndOf="@id/tvLabel1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLabel2"
        android:text="Overview"
        style="@style/boldText"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvLabel1"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvOverview"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvLabel2"
        app:layout_constraintStart_toStartOf="@id/tvLabel1"
        app:layout_constraintEnd_toEndOf="@id/tvLabel1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLabel3"
        android:text="Review"
        style="@style/boldText"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tvOverview"
        app:layout_constraintStart_toStartOf="@id/tvLabel1"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvReview"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvLabel3"
        app:layout_constraintStart_toStartOf="@id/tvLabel1"
        app:layout_constraintEnd_toEndOf="@id/tvLabel1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/bottBar"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/outline_share_24"
        android:padding="15dp"
        android:id="@+id/ivShare"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/bottBar"
        app:layout_constraintBottom_toBottomOf="@id/bottBar"
        app:layout_constraintEnd_toEndOf="@id/bottBar"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/outline_favorite_24"
        android:padding="15dp"
        android:id="@+id/ivFavorite"
        app:layout_constraintTop_toTopOf="@id/bottBar"
        app:layout_constraintBottom_toBottomOf="@id/bottBar"
        app:layout_constraintEnd_toStartOf="@id/ivShare"/>

</androidx.constraintlayout.widget.ConstraintLayout>